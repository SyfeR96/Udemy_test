<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="UdamyWeb">
    <test name="Registration tests">
        <classes>
            <class name="com.udemy.RegistrationTest">
                <methods>
                    <include name="registrationWithValidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Login tests">
        <classes>
            <class name="com.udemy.LoginTest">
                <methods>
                    <include name="loginWithUsingCookie"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Categories Menu Test">
        <classes>
            <class name="com.udemy.CategoriesMenuTest">
                <methods>
                    <include name="checkMainCategories"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Search Test">
        <classes>
            <class name="com.udemy.SearchTest">
                <methods>
                    <include name="searchSome"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check Business and Teach Links Test">
        <classes>
            <class name="com.udemy.CheckLinksTest">
                <methods>
                    <include name="checkLinks"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>